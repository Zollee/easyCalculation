<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#009688"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:id="@+id/relativeLayout"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number7"
            android:id="@+id/number7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            style="@style/NumberButton"
            android:clickable="true"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number8"
            android:id="@+id/number8"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/number7"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number9"
            android:id="@+id/number9"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/number8"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/division"
            android:id="@+id/division"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/number9"
            style="@style/signButton"
            android:background="@drawable/button_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number4"
            android:id="@+id/number4"
            android:layout_below="@+id/number7"
            android:layout_alignParentStart="true"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number5"
            android:id="@+id/number5"
            android:layout_toEndOf="@+id/number4"
            android:layout_below="@+id/number8"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number6"
            android:id="@+id/number6"
            android:layout_below="@+id/number9"
            android:layout_toStartOf="@+id/division"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/multiplication"
            android:id="@+id/multiplication"
            android:layout_toEndOf="@+id/number6"
            android:layout_below="@+id/division"
            style="@style/signButton"
            android:background="@drawable/button_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number1"
            android:id="@+id/number1"
            android:layout_below="@+id/number4"
            android:layout_alignParentStart="true"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number2"
            android:id="@+id/number2"
            android:layout_toEndOf="@+id/number4"
            android:layout_below="@+id/number5"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number3"
            android:id="@+id/number3"
            android:layout_toEndOf="@+id/number5"
            android:layout_below="@+id/number6"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/subtraction"
            android:id="@+id/subtraction"
            android:layout_below="@+id/multiplication"
            android:layout_toEndOf="@+id/number3"
            style="@style/signButton"
            android:background="@drawable/button_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/point"
            android:id="@+id/point"
            android:layout_below="@+id/number1"
            android:layout_alignParentStart="true"
            style="@style/signButton"
            android:background="@drawable/button_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/number0"
            android:id="@+id/number0"
            android:layout_toEndOf="@+id/point"
            android:layout_below="@+id/number1"
            style="@style/NumberButton"
            android:background="@drawable/number_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/equal"
            android:id="@+id/equal"
            android:layout_toEndOf="@+id/number0"
            android:layout_below="@+id/number3"
            style="@style/signButton"
            android:background="@drawable/button_select" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="@string/plus"
            android:id="@+id/plus"
            android:layout_below="@+id/subtraction"
            android:layout_toEndOf="@+id/equal"
            style="@style/signButton"
            android:background="@drawable/button_select" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/linearLayout"
        android:background="#ffffff"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="274dp"
            android:layout_height="fill_parent"
            android:id="@+id/editText"
            android:layout_margin="1dp"
            android:singleLine="true"
            android:longClickable="false"
            android:text="@string/editText"
            style="@style/editText"
            android:gravity="end"
            android:ellipsize="start" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/delete"
            android:src="@android:drawable/ic_input_delete"
            android:background="@drawable/button_select"
            android:layout_margin="1dp"
            android:longClickable="true"
            android:contentDescription="@string/delete"
            android:clickable="false" />
    </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:background="#ffffff"
            android:layout_height="fill_parent"
            android:id="@+id/showResult"
            android:longClickable="false"
            android:text="@string/showText"
            android:gravity="bottom|end"
            style="@style/showText"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true" />


</RelativeLayout>